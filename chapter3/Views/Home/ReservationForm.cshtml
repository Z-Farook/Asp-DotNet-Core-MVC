@* The type of the model is difined with @mdel note the lowercase m *@
@model chapter3.Models.GuestResponse

@{
    Layout = null;
}
<!DOCTYPE hmtl>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForm</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>

<body>
    <h5 class="bg-primary text-white text-center m-2 p-2">Let us know!</h5>
    <div>
        <form asp-action="ReservationForm" method="POST" class="m-2">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Name">Your name:</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Your email:</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Phone">Your phone:</label>
                <input asp-for="Phone" class="form-control" />
            </div>
            <div class="form-group">
                <label>Will you attend?</label>
                <select asp-for="Coming" class="form-control">
                    <option value="">Choose an option</option>
                    <option value="true">Yes, I'll be there</option>
                    <option value="false">No, I can't come</option>
                </select>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary text-center">Submit RSVP</button>
            </div>

        </form>
    </div>

</body>

</html>